$(->
  $.blockUI
    message: '<img src="<%= image_path('spinner.gif') %>"/>'
    css:
        border: '0px solid #fff'
        cursor: 'wait'
        backgroundColor: '#fff'
    overlayCSS:
        backgroundColor: '#fff'
        opacity: 10
        cursor: 'wait'

    $.ajax
        complete: (data) ->
            $.unblockUI()
            return

    $(window).resize( ->
        if $(window).width() < 900
            $('.logo-text').text('PHNL')
        else
            $('.logo-text').text('Pranic Healing Northern Luzon')
    )
)